<UserControl x:Class="VLC.UI.Views.UserControls.TrackItemTemplateDetailed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:VLC.UI.Views.UserControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:utils="using:VLC.Utils"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">
    <Grid FlyoutBase.AttachedFlyout="{StaticResource TrackItemFlyout}"
          RightTapped="Grid_RightTapped"
          Holding="Grid_Holding"
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="12" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="MusicLogo"
                       Foreground="{ThemeResource MainColor}"
                       Text="{StaticResource MusicSymbol}"
                       FontFamily="{StaticResource VLCFont}"
                       FontSize="23"
                       Width="30"
                       Visibility="Collapsed" />
            <TextBlock Grid.Column="1"
                       x:Name="NameTextBlock"
                       TextWrapping="NoWrap"
                       TextTrimming="CharacterEllipsis"
                       FontWeight="SemiLight"
                       Style="{StaticResource TitleTextBlockStyle}"
                       FontSize="15"
                       Margin="0,0,6,0"
                       Loaded="NameTextBlock_OnLoaded" />
        </Grid>
        <TextBlock Grid.Column="1"
                   x:Name="ArtistNameTextBlock"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                   FontWeight="Light"
                   TextWrapping="NoWrap"
                   TextTrimming="CharacterEllipsis" />
        <TextBlock Grid.Column="2"
                   x:Name="AlbumNameTextBlock"
                   Text="{Binding AlbumName, Converter={StaticResource AlbumStringConverter}}"
                   Style="{StaticResource BaseTextBlockStyle}"
                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                   FontWeight="Light"
                   TextWrapping="NoWrap"
                   TextTrimming="CharacterEllipsis" />
        <TextBlock Grid.Column="4"
                   x:Name="DurationTextBlock"
                   FontWeight="Light"
                   FontSize="14"
                   Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}" />
    </Grid>
</UserControl>